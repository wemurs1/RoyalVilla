@model RoyalVilla.DTO.LoginRequestDTO

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <!-- TempData Messages -->
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> SUCCESS
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> ERROR
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow mt-5 mb-5">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-person-circle text-primary display-1"></i>
                        </div>
                        <h3 class="fw-bold text-primary mb-2">Welcome Back</h3>
                        <p class="text-muted">Sign in to your account</p>
                    </div>

                    <!-- Login Form -->
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <!-- Email Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-2"></i>Email Address
                            </label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating mb-4">
                            <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock me-2"></i>Password
                            </label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>


                        <!-- Submit Button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </button>
                        </div>

                        <!-- Divider -->
                        <hr class="my-4">
                        <div class="text-center">
                            <small class="text-muted">OR</small>
                        </div>
                        <hr class="my-4">

                        <!-- Register Link -->
                        <div class="text-center">
                            <p class="mb-3 text-muted">Don't have an account?</p>
                            <a asp-action="Register" class="btn btn-outline-primary">
                                <i class="bi bi-person-plus me-2"></i>Create Account
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
