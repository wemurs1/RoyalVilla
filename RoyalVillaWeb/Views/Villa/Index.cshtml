@using RoyalVilla.DTO
@model IEnumerable<VillaDTO>

<div class="container my-4 pb-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Villa Management</h2>
            <p class="text-muted mb-0">Manage your villa listings</p>
        </div>
        <a asp-controller="villa" asp-action="create"class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Add New Villa
        </a>
    </div>

    <!-- Messages -->
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

     @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h5>No Villas Available</h5>
            <p class="mb-3">Get started by creating your first villa.</p>
            <a href="#" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create Villa
            </a>
        </div>
    }
    else
    {
        <!-- Villa Table -->
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Details</th>
                                <th>Rate</th>
                                <th>Occupancy</th>
                                <th>Sqft</th>
                                
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var villa in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(villa.ImageUrl))
                                        {
                                            <img src="@villa.ImageUrl" class="rounded" style="width: 60px; height: 45px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white"
                                            style="width: 60px; height: 45px;">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <strong>@villa.Name</strong>
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-muted">
                                            @if (string.IsNullOrEmpty(villa.Details))
                                            {
                                                <span class="fst-italic">No details</span>
                                            }
                                            else
                                            {
                                                @(villa.Details.Length > 50 ? villa.Details.Substring(0, 50) + "..." : villa.Details)
                                            }
                                        </small>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge bg-success">$@villa.Rate.ToString("N0")</span>
                                    </td>
                                    <td class="align-middle">
                                        <i class="bi bi-people me-1"></i>@villa.Occupancy
                                    </td>
                                    <td class="align-middle">
                                        <i class="bi bi-rulers me-1"></i>@villa.Sqft
                                    </td>
                                   
                                    <td class="align-middle text-center">
                                        <div class="btn-group btn-group-sm">

                                            <a asp-action="edit" asp-route-id="@villa.Id"
                                            class="btn btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="delete" asp-route-id="@villa.Id"
                                            class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    <!-- Summary -->
    <div class="row mt-5 mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0 stats-card">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 fw-bold">At a Glance</h3>
                    <div class="row text-center g-4">
                        <div class="col-md-3">
                            <div class="stat-item">
                                <i class="bi bi-house-heart-fill text-primary fs-1 mb-3"></i>
                                <h3 class="text-primary fw-bold mb-1">@Model.Count()</h3>
                                <p class="text-muted mb-0">Total Villas</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item">
                                <i class="bi bi-cash-coin text-success fs-1 mb-3"></i>
                                <h3 class="text-success fw-bold mb-1">$@Model.Min(v => v.Rate).ToString("N0")</h3>
                                <p class="text-muted mb-0">Starting From</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item">
                                <i class="bi bi-people-fill text-info fs-1 mb-3"></i>
                                <h3 class="text-info fw-bold mb-1">@Model.Max(v => v.Occupancy)</h3>
                                <p class="text-muted mb-0">Max Occupancy</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item">
                                <i class="bi bi-arrows-fullscreen text-warning fs-1 mb-3"></i>
                                <h3 class="text-warning fw-bold mb-1">@Model.Sum(v => v.Sqft).ToString("N0")</h3>
                                <p class="text-muted mb-0">Total Sqft</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }
</style>
