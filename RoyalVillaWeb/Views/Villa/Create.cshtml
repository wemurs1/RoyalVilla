
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Form Card -->
            <div class="card">
                <div class="card-header bg-success d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">(Create Villa)</span>
                </div>
                <div class="card-body">
                    <form method="post">

                        <!-- Villa Name -->
                        <div class="mb-3">
                            <label class="form-label">
                                Villa Name <span class="text-danger">*</span>
                            </label>
                            <input class="form-control" placeholder="Enter villa name" />
                            <span class="text-danger small"></span>
                        </div>
                        <!-- Details -->
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" rows="4"
                                      placeholder="Describe the villa"></textarea>
                            <span class="text-danger small"></span>
                        </div>
                        <!-- Rate and Occupancy -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    Nightly Rate <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Max Occupancy</label>
                                <input type="number" class="form-control" placeholder="Number of guests" />
                                <span class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Sqft -->
                        <div class="mb-3">
                            <label class="form-label">Square Feet</label>
                            <input type="number" class="form-control" placeholder="Area in sqft" />
                            <span class="text-danger small"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-4">
                            <label class="form-label">Image URL</label>
                            <input class="form-control" placeholder="https://example.com/image.jpg" />
                            <span class="text-danger small"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a href="#" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check me-2"></i>Create Villa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

