@model RoyalVilla.DTO.VillaUpdateDTO

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Form Card -->
            <div class="card">
                <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                    <span class="fw-semibold h4 pt-1">Update Villa</span>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" >
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <!-- Villa Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                Villa Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter villa name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <!-- Details -->
                        <div class="mb-3">
                            <label asp-for="Details" class="form-label">Description</label>
                            <textarea asp-for="Details" class="form-control" rows="4"
                                      placeholder="Describe the villa"></textarea>
                            <span asp-validation-for="Details" class="text-danger small"></span>
                        </div>
                        <!-- Rate and Occupancy -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Rate" class="form-label">
                                    Nightly Rate <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Rate" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Rate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Occupancy" class="form-label">Max Occupancy</label>
                                <input asp-for="Occupancy" type="number" class="form-control" placeholder="Number of guests" />
                                <span asp-validation-for="Occupancy" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Sqft -->
                        <div class="mb-3">
                            <label asp-for="Sqft" class="form-label">Square Feet</label>
                            <input asp-for="Sqft" type="number" class="form-control" placeholder="Area in sqft" />
                            <span asp-validation-for="Sqft" class="text-danger small"></span>
                        </div>

                       

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="text-center mb-4">
                                <label> Current Image</label> <br/>
                                <img src="@SD.GetImageUrl(Model.ImageUrl)" alt="@Model.Name" class="img-fluid rounded" style="max-height: 350px;">
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">Villa Image</label>
                            <input asp-for="Image" class="form-control" accept="image/*" onchange="previewImage(this)"
                                   placeholder="Describe the villa" />
                            <span asp-validation-for="Image" class="text-danger small"></span>
                            <small class="form-text text-muted">Supported formats: JPG, JPEG, PNG (Max 5MB)</small>
                        </div>

                        <div id="imagePreview" class="mt-3 text-center" style="display:none">
                            <img id="preview" class="img-thumbnail" style="max-width:300px;max-height:300px;" />
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check me-2"></i>Update Villa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input){
            const previewContainer = document.getElementById('imagePreview');
            const preview = document.getElementById('preview');

            if(input.files && input.files[0]){
                const reader = new FileReader();

                reader.onload = function (e){
                    preview.src=e.target.result;
                    previewContainer.style.display='block';
                }

                reader.readAsDataURL(input.files[0]);
            }
            else{
                previewContainer.style.display='none';
            }
        }
    </script>
}
